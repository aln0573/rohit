<%- include('../layouts/header.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="text-center mb-4 text-light">Add New User</h1>
      <form action="" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name" class="text-light">Name</label>
          <input
            type="text"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            required
          />
        </div>
        <div class="form-group">
          <label for="email" class="text-light">Email</label>
          <input
            type="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            required
          />
        </div>
        <div class="form-group">
          <label for="mobile" class="text-light">Mobile</label>
          <input
            type="text"
            name="mobile"
            class="form-control"
            placeholder="Enter Mobile Number"
            required
          />
        </div>
        <div class="form-group">
          <label for="image" class="text-light">Upload a Profile Picture</label>
          <input
            type="file"
            name="image"
            class="form-control-file text-light"
          />
        </div>
        <div class="form-group">
          <label for="password" class="text-light">Password</label>
          <input
            type="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
            required
          />
        </div>
        <br />
        <div class="d-flex justify-content-between align-items-center">
          <input type="submit" value="Add User" class="btn btn-primary" />
          <a href="/admin/dashboard" class="btn btn-secondary text-light"
            >Go Back</a
          >
        </div>
      </form>

      <% if (typeof message !== "undefined") { %>
      <p class="text-danger"><%= message %></p>
      <% } %>
    </div>
  </div>
</div>

<%- include('../layouts/footer.ejs') %>
